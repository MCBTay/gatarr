@using Gatarr.Models.Radarr
@using Image = Gatarr.Models.Radarr.Image

<style>
    .crewHeadshot {
        width: 127px;
        height: 187px;
    }

    .emptyCrewHeadshot {
        position: relative;
        display: block;
        background-color: #333;
    }

    .crewHeadshotOverlay {
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5px;
        width: 127px;
        height: 187px;
        color: #f5f7fa;
        text-align: center;
        font-size: 20px;
    }

    .credit .personName {
        font-weight: bold;
    }

    .credit .personName,
    .credit .character,
    .credit .job {
        font-size: 12px;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .credit .ant-card-body {
        padding: 0px;
    }
</style>

<div class="credit">
    <Card Hoverable Style="width: 127px" Cover="GetHeadshotTemplate()">
        <div class="personName">@credit.personName</div>
        @if (!string.IsNullOrEmpty(credit.character))
        {
            <div class="character">@credit.character</div>
        }
        @if (!string.IsNullOrEmpty(credit.job))
        {
            <div class="job">@credit.job</div>
        }
    </Card>
</div>

@code {
    [Parameter]
    public Credit credit { get; set; }

    public Image Headshot => credit?.images?.FirstOrDefault(x => x.coverType == "headshot");

    public RenderFragment GetHeadshotTemplate()
    {
        if (Headshot == null)
        {
            return @<div><img alt="headshot" class="crewHeadshot" src="data:image/png;base64,"/><div class="crewHeadshotOverlay">@credit.personName</div></div>;
        }
        else
        {
            return @<img alt="headshot" class="crewHeadshot" src="@Headshot.url"/>;
        }
    }

}